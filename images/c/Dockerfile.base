# Whanos Base Image - C (GCC 13.2)
# Image officielle Debian 12
FROM debian:12-slim

# Utiliser bash pour toutes les commandes (exigence du sujet)
SHELL ["/bin/bash", "-c"]

# Installer GCC 13.2 via build-essential
RUN apt-get update && \
    apt-get install -y build-essential && \
    rm -rf /var/lib/apt/lists/*

# Vérifier la version de GCC
RUN gcc --version | grep "gcc"

# Créer le répertoire de travail
RUN mkdir -p /app
WORKDIR /app

CMD ["/bin/bash"]