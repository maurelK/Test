# Whanos Base Image - JavaScript (Node.js 20.9)
# Image officielle Node.js 20.9
FROM node:20.9-slim

# Utiliser bash pour toutes les commandes (exigence du sujet)
SHELL ["/bin/bash", "-c"]

# Vérifier les versions
RUN node --version && npm --version

# Créer le répertoire de travail
RUN mkdir -p /app
WORKDIR /app

CMD ["/bin/bash"]